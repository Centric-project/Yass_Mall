@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using ContentModels = Umbraco.Web.PublishedModels;
@using ClientDependency.Core.Mvc;
@using Umbraco.Web.Mvc;
@using System.Text;
@{
    Layout = "Master.cshtml";
}
<style>
    .filter-box{
        padding:0px;
    }
    .howTo{
        margin-top: 20px;
    }
</style>
<!--Start Main Banner-->
@{
    var mainBannerImg = Model.Value<IPublishedContent>("eventBannerImage");
    if (mainBannerImg != null)
    {
        <section class="main-banner">
            <div class="container-fluid custom-container-fluid">
                <div class="main-slide">
                    <div class="slide">
                        <img src="@mainBannerImg.Url()" alt="@Model.Value("eventTitleRamadan")" class="img-fluid" />
                    </div>
                </div>
            </div>
        </section>
    }
}
<!--End Main Banner-->
<!--Start Inner Page Wrapper-->
<div class="inner-section">
    <div class="container-fluid custom-container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!--Start Breadcrumbs-->
                <nav aria-label="breadcrumb" class="breadcrumb-holder">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Umbraco.GetDictionaryValue(" logoHref")">@Umbraco.GetDictionaryValue("home")</a></li>
                        <li class="breadcrumb-seprator"><i class="fas fa-angle-right"></i></li>
                        <li class="breadcrumb-item"><a href="@Umbraco.GetDictionaryValue("EventsHref")">@Umbraco.GetDictionaryValue("Events")</a></li>
                        <li class="breadcrumb-seprator"><i class="fas fa-angle-right"></i></li>
                        <li class="breadcrumb-item active" aria-current="page">@Umbraco.GetDictionaryValue("RamadanCampaign")</li>
                    </ol>
                </nav>
                <!--End Breadcrumbs-->
                <!--Start Main Title-->
                <div class="clearfix title-holder">
                    <h1 class="title">@Model.Value("eventTitleRamadan")</h1>
                </div>
                @Html.Raw(Model.Value("eventSmallDescriptionRamadan"))
                <!--End Main Title-->
                <div class="filter-box page-content campaign-cards yesMallCard">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.Raw(Model.Value("eventDescriptionRamadan"))
                        </div>
                    </div>
                </div>
                <div class="howTo">
                    <div class="container">
                        <div class="row">
                            @{
                                var ramdanEventImg = Model.Value<IPublishedContent>
                                    ("eventVideoPosterRamadan");
                                var ramdanEventVideo = Model.Value<IPublishedContent>
                                    ("eventVideoRamadan");

                                if (ramdanEventVideo != null)
                                {
                                    <div class="col-12">
                                        <h3>@Umbraco.GetDictionaryValue("HowToParticipate")</h3>
                                        <h3>@Umbraco.GetDictionaryValue("WatchVideo")</h3>
                                        <span class="icon"></span>
                                        <video id="aboutUsVideo" controls class="tv_video hide-for-small-only" poster="@ramdanEventImg.Url()">
                                            <source src="@ramdanEventVideo.Url()" type="video/mp4">
                                            Your browser does not support the video tag.
                                        </video>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="terms-condition">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <div class="">
                                    @Html.Raw(Model.Value("eventTCRamadan"))
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End Inner Page Wrapper-->
    @* the fun starts here *@
</div>

