@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    Layout = "Master.cshtml";

    // set page title segment
    ViewBag.PageTitle = Model.Value("thankUTitle");
}
<style type="text/css">
    .title-holder {
        padding-bottom: 10px;
    }
</style>
<!--Start Main Banner-->
@{
    var errorBannerImg = Model.Value<IPublishedContent>("thankUMainBanner");
    if (errorBannerImg != null)
    {
        <section class="main-banner">
            <div class="container-fluid custom-container-fluid">
                <div class="main-slide">
                    <div class="slide">
                        <img src="@errorBannerImg.Url()" alt="@Model.Value("thankUTitle")" class="img-fluid" />
                    </div>
                </div>
            </div>
        </section>
    }
}
<!--End Main Banner-->
<!--Start Inner Page Wrapper-->
<div class="inner-section">
    <div class="container-fluid custom-container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!--Start Breadcrumbs-->
                <nav aria-label="breadcrumb" class="breadcrumb-holder">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Umbraco.GetDictionaryValue("logoHref")">@Umbraco.GetDictionaryValue("home")</a></li>
                        <li class="breadcrumb-seprator"><i class="fas fa-angle-right"></i></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.Value("thankUTitle")</li>
                    </ol>
                </nav>
                <!--End Breadcrumbs-->
                <!--Start Main Title-->
                <div class="clearfix title-holder">
                    <h1 class="title">@Model.Value("thankUTitle")</h1>
                </div>
                <!--End Main Title-->
                <div class="filter-box page-content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="align-center text-center">
                                <h3>@Model.Value("thankUSubTitle")</h3>
                                @Html.Raw(Model.Value("thankUSmallDetails"))
                                <br />
                                <br />
                                <div class="buttons">
                                    <a href="@Umbraco.GetDictionaryValue("logoHref")" class="btn btn-primary">@Umbraco.GetDictionaryValue("backtohome")</a>
                                    <div class="btnDivider"></div>
                                    <a href="@Umbraco.GetDictionaryValue("contactusHref")" class="btn btn-primary">@Umbraco.GetDictionaryValue("ContactUs")</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Inner Page Wrapper-->