@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    Layout = "master.cshtml";
}

<style type="text/css">
    div.title-holder {
        padding-bottom: 0px;
    }

    .general-page p {
        font-family: "Gotham-Book";
        font-size: 15px;
        margin: 0px;
        text-align: justify;
    }

        .general-page p.strheading {
            margin-top: 30px;
            margin-bottom: 0px;
        }

            .general-page p.strheading strong {
                font-family: "Gotham-Bold";
                font-size: 18px;
                font-weight: 900;
            }

    .general-page ul li {
        font-size: 15px !important;
    }
</style>

<!--Start Main Banner-->
@{
    var ppBannerImg = Model.Value<IPublishedContent>("privacyBanner");
    if (ppBannerImg != null)
    {
        <section class="main-banner">
            <div class="container-fluid custom-container-fluid">
                <div class="main-slide">
                    <div class="slide">
                        <img src="@ppBannerImg.Url()" alt="@Model.Value("privacyTitle")" class="img-fluid" />
                    </div>
                </div>
            </div>
        </section>
    }
}
<!--End Main Banner-->
<!--Start Inner Page Wrapper-->
<div class="inner-section">
    <div class="container-fluid custom-container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!--Start Breadcrumbs-->
                <!--Start Breadcrumbs-->
                <nav aria-label="breadcrumb" class="breadcrumb-holder">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Umbraco.GetDictionaryValue("logoHref")">@Umbraco.GetDictionaryValue("home")</a></li>
                        <li class="breadcrumb-seprator"><i class="fas fa-angle-right"></i></li>
                        <li class="breadcrumb-item active" aria-current="page">@Umbraco.GetDictionaryValue("privacypolicy")</li>
                    </ol>
                </nav>
                <!--End Breadcrumbs-->
                <!--Start Main Title-->
                <div class="clearfix title-holder">
                    <h1 class="title">@Model.Value("privacyTitle")</h1>
                </div>
                <!--End Main Title-->
                <div class="filter-box page-content">
                    <div class="row">
                        <div class="col-md-12 general-page">
                            @Html.Raw(Model.Value("bigDetails"))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Inner Page Wrapper-->
