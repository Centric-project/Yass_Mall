@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    Layout = "master.cshtml";
}
<!--Start Main Banner-->
@{
    var aboutBannerImg = Model.Value<IPublishedContent>("aboutUsBanner");
    if (aboutBannerImg != null)
    {
        <section class="main-banner">
            <div class="container-fluid custom-container-fluid">
                <div class="main-slide">
                    <div class="slide">
                        <img src="@aboutBannerImg.Url()" alt="@Model.Value("aboutUsTitle")" class="img-fluid" />
                    </div>
                </div>
            </div>
        </section>
    }
}
<!--End Main Banner-->
<!--Start Inner Page Wrapper-->
<div class="inner-section">
    <div class="container-fluid custom-container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!--Start Breadcrumbs-->
                <nav aria-label="breadcrumb" class="breadcrumb-holder">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Umbraco.GetDictionaryValue("logoHref")">@Umbraco.GetDictionaryValue("home")</a></li>
                        <li class="breadcrumb-seprator"><i class="fas fa-angle-right"></i></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.Value("aboutUsTitle")</li>
                    </ol>
                </nav>
                <!--End Breadcrumbs-->
                <!--Start Main Title-->
                <div class="clearfix title-holder">
                    <h1 class="title">@Model.Value("aboutUsTitle")</h1>
                </div>
                <!--End Main Title-->
                <div class="filter-box page-content">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.Raw(Model.Value("aboutUsBigDetails"))
                        </div>
                    </div>
                    @{
                                //var aboutUsPageImg = Umbraco.Field("aboutUsVideoPoster");
                                var aboutUsPagevideo = Model.Value<IPublishedContent>("aboutUsVideo");
                                var aboutUsVideoPoster = Model.Value<IPublishedContent>("aboutUsVideoPoster");

                                if (aboutUsPagevideo != null)
                                {
                            <div class="content">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="text video-thumb">
                                            <span class="icon"></span>
                                            <video id="aboutUsVideo" controls class="tv_video hide-for-small-only">
                                                <source src="@aboutUsPagevideo.Url()" type="video/mp4">
                                                Your browser does not support the video tag.
                                            </video>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div>NO VIDEO FOUND</div>
                    }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Inner Page Wrapper-->
<script type="text/javascript">
    $(document).ready(function () {
        $("a.video-thumb").fancybox({
            maxWidth: 800,
            maxHeight: 600,
            fitToView: false,
            width: '70%',
            height: '70%',
            autoSize: false,
            closeClick: false,
            openEffect: 'none',
            closeEffect: 'none'
        });
        $('.icon').click(function () {
            $('#aboutUsVideo').trigger('play');
            $('.icon').hide();
        });
    });
</script>